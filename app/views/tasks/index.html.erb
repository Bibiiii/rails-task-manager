<h1>My Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
    <%= task.task_name %> /
    <%= link_to "Change this task", edit_task_path(task) %> /
    <%= link_to "Delete this task", task_path(task), method: :delete %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path, class: "btn" %>
